<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/yellow" /> <!-- Цвет фона при нажатии -->
            <stroke android:width="1dp" android:color="#D0E500" /> <!-- Цвет и ширина рамки -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/black" /> <!-- Цвет фона по умолчанию -->
            <stroke android:width="1dp" android:color="#FFFFFF" /> <!-- Цвет и ширина рамки -->
        </shape>
    </item>
</selector>
