<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".login_singin.login_screen">

    <ImageView
        android:id="@+id/imagebutton_back_gender"
        android:layout_width="8dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:rotationY="-180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/skip_arrow" />

    <TextView
        android:id="@+id/textLog_Back_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Back"
        android:textColor="#E2F163"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imagebutton_back_gender"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="258dp"
        android:layout_height="38dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="68dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Whatâ€™s Your Gender"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLog_Back_gender" />

    <View
        android:id="@+id/purple_box_set_up"
        android:layout_width="450dp"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:background="#B3A0FF"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="-20dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="371dp"
        android:layout_height="72dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        android:textColor="#232323"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="116dp"
        android:background="@drawable/rounded_white_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple_box_set_up" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="56dp"
        android:layout_height="26dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="169dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Male"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="116dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple_box_set_up" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="86dp"
        android:layout_height="26dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="403dp"
        android:layout_marginEnd="154dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Female"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple_box_set_up" />

    <Button
        android:id="@+id/button_next_set_up"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_grey"
        android:fontFamily="@font/poppins_medium"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>