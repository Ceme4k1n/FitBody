<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".floating_menus.profile_screen">


    <View
        android:id="@+id/purple_box_profile"
        android:layout_width="460dp"
        android:layout_height="290dp"
        android:background="#B3A0FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_my_profyle_profilePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="My Profile"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="30dp" />

    <ImageView
        android:id="@+id/strelka_profilePage"
        android:layout_width="6dp"
        android:layout_height="11dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_my_profyle_profilePage"
        app:layout_constraintEnd_toStartOf="@+id/text_my_profyle_profilePage"
        app:srcCompat="@drawable/image_2024_05_27_21_58_35" />

    <ImageView
        android:id="@+id/image_profile_profilePage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_2024_05_27_21_49_51" />

    <TextView
        android:id="@+id/text_FI_profilePage"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Madison Smith"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_profile_profilePage" />

    <TextView
        android:id="@+id/email_profilePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="madisons@example.com"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_FI_profilePage"
        app:lineHeight="19.5dp"
        tools:ignore="HardcodedText"
        tools:layout_constraintHorizontal_weight="300" />

    <TextView
        android:id="@+id/text_birth_profilePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Birthday: "
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/email_profilePage"
        app:layout_constraintTop_toBottomOf="@+id/email_profilePage" />

    <TextView
        android:id="@+id/birrthday_text_profilePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/league_spartan"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/text_birth_profilePage"
        app:layout_constraintTop_toBottomOf="@+id/email_profilePage"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/purple_box2_profile"
        android:layout_width="323dp"
        android:layout_height="60dp"
        android:layout_marginTop="-21dp"
        android:background="@drawable/rounded_background_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple_box_profile" />


    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="41dp"
        android:layout_marginEnd="83dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/purple_box2_profile"
        app:layout_constraintEnd_toEndOf="@+id/purple_box2_profile"
        app:layout_constraintTop_toTopOf="@+id/purple_box2_profile" />

    <View
        android:layout_width="1dp"
        android:layout_height="41dp"
        android:layout_marginStart="82dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/purple_box2_profile"
        app:layout_constraintStart_toStartOf="@+id/purple_box2_profile"
        app:layout_constraintTop_toTopOf="@+id/purple_box2_profile" />


    <TextView
        android:id="@+id/text_weight_profilePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/league_spartan"
        android:text="Weight"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/purple_box2_profile"
        app:layout_constraintStart_toStartOf="@+id/purple_box2_profile" />


    <TextView
        android:id="@+id/weight_text_profilePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:fontFamily="@font/league_spartan_bold"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/text_weight_profilePage"
        app:layout_constraintEnd_toEndOf="@+id/text_weight_profilePage"
        app:layout_constraintStart_toStartOf="@+id/text_weight_profilePage"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_how_old_profilePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/league_spartan"
        android:text="Years old"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/purple_box2_profile"
        app:layout_constraintEnd_toEndOf="@+id/purple_box2_profile"
        app:layout_constraintStart_toStartOf="@+id/purple_box2_profile" />

    <TextView
        android:id="@+id/years_old_text_profilePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:fontFamily="@font/league_spartan_bold"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/text_how_old_profilePage"
        app:layout_constraintEnd_toEndOf="@+id/text_how_old_profilePage"
        app:layout_constraintStart_toStartOf="@+id/text_how_old_profilePage"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/text_height_profilePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/league_spartan"
        android:text="Height"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/purple_box2_profile"
        app:layout_constraintEnd_toEndOf="@+id/purple_box2_profile" />

    <TextView
        android:id="@+id/height_text_profilePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:fontFamily="@font/league_spartan_bold"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/text_height_profilePage"
        app:layout_constraintEnd_toEndOf="@+id/text_height_profilePage"
        app:layout_constraintStart_toStartOf="@+id/text_height_profilePage"
        tools:ignore="HardcodedText" />


    <ScrollView
        android:id="@+id/scroll_group_profilePage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple_box2_profile">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textFull_name_profilePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/full_name_text_profilePage"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/league_spartan_bold"
                android:text="Full name"
                android:textColor="@color/purple"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/full_name_text_profilePage"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/full_name_text_profilePage"
                android:layout_width="322dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/rounded_button_on_board"
                android:ems="10"
                android:fontFamily="@font/league_spartan_bold"
                android:hint="Madison Smith"
                android:paddingLeft="16dp"
                android:paddingBottom="5dp"
                android:textColor="@color/real_black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_email_profilePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/email_text_profilePage"
                android:layout_alignTop="@+id/email_text_profilePage"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-33dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/league_spartan_bold"
                android:text="Email"
                android:textColor="@color/purple"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/email_text_profilePage"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/email_text_profilePage"
                android:layout_width="322dp"
                android:layout_height="45dp"
                android:layout_below="@+id/full_name_text_profilePage"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/rounded_button_on_board"
                android:ems="10"
                android:fontFamily="@font/league_spartan_bold"
                android:hint="madisons@example.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="16dp"
                android:paddingBottom="5dp"
                android:textColor="@color/real_black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_number_profilePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/phone_text_profilePage"
                android:layout_alignStart="@+id/phone_text_profilePage"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="-33dp"
                android:fontFamily="@font/league_spartan_bold"
                android:text="Mobile Number"
                android:textColor="@color/purple"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/phone_text_profilePage"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/phone_text_profilePage"
                android:layout_width="322dp"
                android:layout_height="45dp"
                android:layout_below="@+id/email_text_profilePage"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/rounded_button_on_board"
                android:ems="10"
                android:fontFamily="@font/league_spartan_bold"
                android:hint="+123 567 89000"
                android:inputType="phone"
                android:paddingLeft="16dp"
                android:paddingBottom="5dp"
                android:textColor="@color/real_black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_date_profilePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/date_text_profilePage"
                android:layout_alignStart="@+id/phone_text_profilePage"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="-33dp"
                android:fontFamily="@font/league_spartan_bold"
                android:text="Date of birth"
                android:textColor="@color/purple"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/phone_text_profilePage"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/date_text_profilePage"
                android:layout_width="322dp"
                android:layout_height="45dp"
                android:layout_below="@+id/phone_text_profilePage"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/rounded_button_on_board"
                android:ems="10"
                android:textColor="@color/real_black"
                android:fontFamily="@font/league_spartan_bold"
                android:hint="01 / 04 / 199X"
                android:inputType="date"
                android:paddingLeft="16dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_weightPlain_profilePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/weight_textView_profilePage"
                android:layout_alignStart="@+id/phone_text_profilePage"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="-33dp"
                android:fontFamily="@font/league_spartan_bold"
                android:text="Weight"
                android:textColor="@color/purple"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/phone_text_profilePage"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/weight_textView_profilePage"
                android:layout_width="322dp"
                android:layout_height="45dp"
                android:layout_below="@+id/date_text_profilePage"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/rounded_button_on_board"
                android:ems="10"
                android:fontFamily="@font/league_spartan_bold"
                android:hint="75 Kg"
                android:textColor="@color/real_black"
                android:inputType="number"
                android:paddingLeft="16dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_heightPlain_profilePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/height_textView_profilePage"
                android:layout_alignStart="@+id/phone_text_profilePage"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="-33dp"
                android:fontFamily="@font/league_spartan_bold"
                android:text="Height"
                android:textColor="@color/purple"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/phone_text_profilePage"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/height_textView_profilePage"
                android:layout_width="322dp"
                android:layout_height="45dp"
                android:layout_below="@+id/weight_textView_profilePage"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/rounded_button_on_board"
                android:ems="10"
                android:fontFamily="@font/league_spartan_bold"
                android:hint="1.65 CM"
                android:textColor="@color/real_black"
                android:inputType="number"
                android:paddingLeft="16dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_Advance_physAct"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/height_textView_profilePage"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="120dp"
                android:background="@drawable/round_button_phys_act_yellow"
                android:fontFamily="@font/league_spartan_bold"
                android:text="Update Profile"
                android:textColor="@color/real_black"
                android:textSize="15sp" />

        </RelativeLayout>
    </ScrollView>

    <View
        android:layout_width="20dp"
        android:layout_height="450dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="-5dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/purple_box_two_profilePage"
        android:layout_width="460dp"
        android:layout_height="60dp"
        android:background="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_homeButton_profilePage"
        android:layout_width="25dp"
        android:layout_height="27dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_button"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/image_zakladkaButton_profilePage"
        android:layout_width="25dp"
        android:layout_height="29dp"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_homeButton_profilePage"
        app:srcCompat="@drawable/zakladka_vidos_button"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_buttmarkButton_profilePage"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_zakladkaButton_profilePage"
        app:srcCompat="@drawable/bookmark_off_button"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_operatorButton_profilePage"
        android:layout_width="32dp"
        android:layout_height="31dp"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_buttmarkButton_profilePage"
        app:srcCompat="@drawable/operator_button"
        tools:ignore="ContentDescription,ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>