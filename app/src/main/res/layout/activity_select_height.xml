<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".setup_pages.select_height">

    <TextView
        android:id="@+id/textback_button_selectHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Back"
        android:textColor="@color/yellow_kak_mocha"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageback_arrow_svg_selectHeight"
        android:layout_width="6dp"
        android:layout_height="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="9dp"
        android:rotation="-180"
        app:layout_constraintBottom_toBottomOf="@+id/textback_button_selectHeight"
        app:layout_constraintEnd_toStartOf="@+id/textback_button_selectHeight"
        app:layout_constraintTop_toTopOf="@+id/textback_button_selectHeight"
        app:srcCompat="@drawable/skip_arrow"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_whats_your_height_selectHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="What Is Your Weight?"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textgovno_selectWeight"
        android:layout_width="303dp"
        android:layout_height="60dp"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/league_spartan"
        android:gravity="center"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_whats_your_height_selectHeight" />

    <EditText
        android:id="@+id/number_confirm_text_selectHeight"
        android:layout_width="311dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_button_on_board"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Your Height"
        android:inputType="textPassword"
        android:paddingLeft="90dp"
        android:paddingTop="5dp"
        android:textColor="@color/real_black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textgovno_selectWeight" />

    <ImageView
        android:id="@+id/imageykazatel_arrow_svg_selectHeight"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:rotation="-90"
        app:layout_constraintEnd_toEndOf="@+id/number_confirm_text_selectHeight"
        app:layout_constraintStart_toStartOf="@+id/number_confirm_text_selectHeight"
        app:layout_constraintTop_toBottomOf="@+id/number_confirm_text_selectHeight"
        app:srcCompat="@drawable/skip_arrow"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/button_continue_selectHeight"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded_button_grey"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingTop="3dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/number_confirm_text_selectHeight"
        app:layout_constraintStart_toStartOf="@+id/number_confirm_text_selectHeight"
        app:layout_constraintTop_toBottomOf="@+id/number_confirm_text_selectHeight" />

</androidx.constraintlayout.widget.ConstraintLayout>