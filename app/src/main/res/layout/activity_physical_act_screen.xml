<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".setup_pages.physical_act_screen">

    <TextView
        android:id="@+id/textback_button_physAcrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Back"
        android:textColor="@color/yellow_kak_mocha"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageback_arrow_svg_physAct"
        android:layout_width="6dp"
        android:layout_height="11dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="9dp"
        android:rotation="-180"
        app:layout_constraintBottom_toBottomOf="@+id/textback_button_physAcrt"
        app:layout_constraintEnd_toStartOf="@+id/textback_button_physAcrt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textback_button_physAcrt"
        app:srcCompat="@drawable/skip_arrow"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_physical_activity_physAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Physical Activity Level"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textgovno_goalPage"
        android:layout_width="303dp"
        android:layout_height="60dp"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/league_spartan"
        android:gravity="center"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_physical_activity_physAct" />

    <TextView
        android:id="@+id/button_begginer_physAct"
        android:layout_width="323dp"
        android:layout_height="64dp"
        android:layout_marginTop="114dp"
        android:text="Begginer"
        android:textSize="24sp"
        android:textColor="@color/purple"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:paddingTop="6dp"
        android:background="@drawable/round_button_phys_act"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textgovno_goalPage" />

    <TextView
        android:id="@+id/button_Intermediate_physAct"
        android:layout_width="323dp"
        android:layout_height="64dp"
        android:layout_marginTop="214dp"
        android:text="Intermediate"
        android:textSize="24sp"
        android:textColor="@color/purple"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:paddingTop="6dp"
        android:background="@drawable/round_button_phys_act"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textgovno_goalPage" />

    <TextView
        android:id="@+id/button_Advance_physAct"
        android:layout_width="323dp"
        android:layout_height="64dp"
        android:layout_marginTop="314dp"
        android:text="Advance"
        android:textSize="24sp"
        android:textColor="@color/purple"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:paddingTop="6dp"
        android:background="@drawable/round_button_phys_act"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textgovno_goalPage" />

    <TextView
        android:id="@+id/button_continue_goalPage"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/rounded_button_grey"
        android:fontFamily="@font/poppins_medium"
        android:paddingTop="3dp"
        android:text="Continue"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Advance_physAct" />


</androidx.constraintlayout.widget.ConstraintLayout>