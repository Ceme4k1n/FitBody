<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".floating_menus.setting_screen">

    <RelativeLayout
        android:id="@+id/default_settings_group"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_settings_settingPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Settings"
            android:textColor="@color/purple"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lineHeight="30dp" />

        <ImageView
            android:id="@+id/strelka_settingsPage"
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:layout_alignTop="@+id/text_settings_settingPage"
            android:layout_marginStart="13dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="-30dp"
            android:layout_marginBottom="7dp"
            android:layout_toStartOf="@+id/text_settings_settingPage"
            app:srcCompat="@drawable/image_2024_05_27_21_58_35" />

        <ImageView
            android:id="@+id/image_colokol_settingPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="122dp"
            app:srcCompat="@drawable/colocol_image_setting" />

        <ImageView
            android:id="@+id/image_key_settingPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_colokol_settingPage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="21dp"
            app:srcCompat="@drawable/key_image_setting" />

        <ImageView
            android:id="@+id/image_profile_settingPage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/image_key_settingPage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="21dp"
            app:srcCompat="@drawable/image_2024_05_27_23_22_17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_key_settingPage"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/image_key_settingPage"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Notification Setting"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_colokol_settingPage"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/image_colokol_settingPage"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Password Setting"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_profile_settingPage"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/image_profile_settingPage"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Delete Account"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/strela1_settingPage"
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:layout_alignTop="@+id/image_colokol_settingPage"
            android:layout_marginStart="271dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/image_colokol_settingPage"
            android:rotation="90"
            app:srcCompat="@drawable/image_2024_05_28_00_03_38" />

        <ImageView
            android:id="@+id/strela2_settingPage"
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:layout_alignTop="@+id/image_key_settingPage"
            android:layout_marginStart="271dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/image_key_settingPage"
            android:rotation="90"
            app:layout_constraintStart_toEndOf="@+id/image_key_settingPage"
            app:layout_constraintTop_toTopOf="@+id/image_key_settingPage"
            app:srcCompat="@drawable/image_2024_05_28_00_03_38" />

        <ImageView
            android:id="@+id/strela3_settingPage"
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:layout_alignTop="@+id/image_profile_settingPage"
            android:layout_marginStart="271dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/image_profile_settingPage"
            android:rotation="90"
            app:layout_constraintStart_toEndOf="@+id/image_key_settingPage"
            app:layout_constraintTop_toTopOf="@+id/image_key_settingPage"
            app:srcCompat="@drawable/image_2024_05_28_00_03_38" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_notifications_setting_settingPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Notifications Settings"
            android:textColor="@color/purple"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lineHeight="30dp" />

        <ImageView
            android:id="@+id/strelka_notification_settingsPage"
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:layout_alignTop="@+id/text_notifications_setting_settingPage"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-30dp"
            android:layout_marginBottom="7dp"
            android:layout_toStartOf="@+id/text_notifications_setting_settingPage"
            app:srcCompat="@drawable/image_2024_05_27_21_58_35" />

        <TextView
            android:id="@+id/text_general_not_notSettingsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="122dp"
            android:fontFamily="@font/league_spartan_bold"
            android:text="General Notification"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_sound_notSettingsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="176dp"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Sound"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_disturb_mode_notSettingsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="230dp"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Donâ€™t Disturb Mode"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_vibrate_notSettingsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="284dp"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Vibrate"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_lock_screen_notSettingsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="338dp"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Lock Screen"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_reminders_notSettingsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="392dp"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Reminders"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_general_not_notSettingsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_general_not_notSettingsPage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="33dp" />

        <Switch
            android:id="@+id/switch_sound_notSettingsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_sound_notSettingsPage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="33dp" />

        <Switch
            android:id="@+id/switch_disturb_notSettingsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_disturb_mode_notSettingsPage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="33dp" />

        <Switch
            android:id="@+id/switch_vibrate_notSettingsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_vibrate_notSettingsPage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="33dp" />

        <Switch
            android:id="@+id/switch_lock_screen_notSettingsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_lock_screen_notSettingsPage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="33dp" />

        <Switch
            android:id="@+id/switch_reminders_notSettingsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_reminders_notSettingsPage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="33dp" />

    </RelativeLayout>






    <View
        android:id="@+id/purple_box_settingPage"
        android:layout_width="460dp"
        android:layout_height="60dp"
        android:background="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_homeButton_settingPage"
        android:layout_width="25dp"
        android:layout_height="27dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_button"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/image_zakladkaButton_settingPage"
        android:layout_width="25dp"
        android:layout_height="29dp"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_homeButton_settingPage"
        app:srcCompat="@drawable/zakladka_vidos_button"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_buttmarkButton_settingPage"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_zakladkaButton_settingPage"
        app:srcCompat="@drawable/bookmark_off_button"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_operatorButton_settingPage"
        android:layout_width="32dp"
        android:layout_height="31dp"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_buttmarkButton_settingPage"
        app:srcCompat="@drawable/operator_button"
        tools:ignore="ContentDescription,ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>