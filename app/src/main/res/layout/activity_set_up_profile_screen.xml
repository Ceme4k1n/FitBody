<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".setup_pages.set_up_profile_screen">

    <TextView
        android:id="@+id/textback_button_setupProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Back"
        android:textColor="#FFEB3B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageback_arrow_svg_setupProfile"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageback_arrow_svg_setupProfile"
        android:layout_width="6dp"
        android:layout_height="11dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:rotation="-180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/skip_arrow"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_fill_profile_setupProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Fill Your Profile"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textgovno_setupProfile"
        android:layout_width="303dp"
        android:layout_height="60dp"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/league_spartan"
        android:gravity="center"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_fill_profile_setupProfile" />

    <View
        android:id="@+id/purple_box_setupProfile"
        android:layout_width="460dp"
        android:layout_height="143dp"
        android:layout_marginTop="19dp"
        android:background="#B3A0FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textgovno_setupProfile" />

    <Button
        android:id="@+id/button_start_setupProfile"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/round_button_phys_act_yellow"
        android:fontFamily="@font/poppins_medium"
        android:paddingTop="3dp"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_text_setupProfile" />

    <ImageView
        android:id="@+id/imageTest_avatar_setupProfiel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/purple_box_setupProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/test_avatar_image" />

    <ImageView
        android:id="@+id/imageKarandash_setupProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imageTest_avatar_setupProfiel"
        app:layout_constraintTop_toBottomOf="@+id/imageTest_avatar_setupProfiel"
        app:srcCompat="@drawable/karandash_to_profile" />

    <TextView
        android:id="@+id/textFull_name_setupProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Full name"
        android:textColor="@color/purple"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/full_name_text_setupProfile"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/full_name_text_setupProfile"
        android:layout_width="322dp"
        android:layout_height="45dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/rounded_button_on_board"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Madison Smith"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:textColor= "@color/real_black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple_box_setupProfile" />

    <TextView
        android:id="@+id/text_nickname_setupProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Nickname"
        android:textColor="@color/purple"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/full_nickname_text_setupProfile"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/full_nickname_text_setupProfile"
        android:layout_width="322dp"
        android:layout_height="45dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/rounded_button_on_board"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Madison "
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:textColor="@color/real_black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple_box_setupProfile" />

    <TextView
        android:id="@+id/text_email_setupProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Email"
        android:textColor="@color/purple"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/email_text_setupProfile"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/email_text_setupProfile"
        android:layout_width="322dp"
        android:layout_height="45dp"
        android:layout_marginTop="206dp"
        android:background="@drawable/rounded_button_on_board"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="madisons@example.com"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple_box_setupProfile" />

    <TextView
        android:id="@+id/text_number_setupProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Mobile Number"
        android:textColor="@color/purple"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/phone_text_setupProfile"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/phone_text_setupProfile"
        android:layout_width="322dp"
        android:layout_height="45dp"
        android:layout_marginTop="288dp"
        android:background="@drawable/rounded_button_on_board"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="+123 567 89000"
        android:inputType="phone"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple_box_setupProfile" />

</androidx.constraintlayout.widget.ConstraintLayout>