<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".login_singin.login_screen">

    <TextView
        android:id="@+id/textgovno_yellow_set_up"
        android:layout_width="328dp"
        android:layout_height="136dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="395dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="272dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Consistency Is  the Key To progress. Don't Give Up!"
        android:textColor="#E2F163"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/purple_box_set_up"
        android:layout_width="450dp"
        android:layout_height="116dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="123dp"
        android:background="#B3A0FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textgovno_yellow_set_up"
        tools:layout_editor_absoluteX="-20dp" />

    <TextView
        android:id="@+id/textgovno_black_set_up"
        android:layout_width="324dp"
        android:layout_height="52dp"
        android:fontFamily="@font/league_spartan"
        android:gravity="center"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
        android:textColor="#232323"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="535dp" />

    <Button
        android:id="@+id/button_next_set_up"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/rounded_button_grey"
        android:fontFamily="@font/poppins_medium"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple_box_set_up" />

</androidx.constraintlayout.widget.ConstraintLayout>